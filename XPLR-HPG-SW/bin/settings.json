{
    "files.encoding": "utf8",
    "astyle.executable": "${workspaceRoot}/bin/AStyle.exe",
    "astyle.c.enable": true,
    "C_Cpp.formatting": "disabled",
    "astyle.astylerc": "${workspaceRoot}/bin/.astylerc",
    "prettier.printWidth": 120,
    "editor.wordWrap": "off",
    "editor.formatOnPaste": true,
    //"editor.formatOnSave": true,
    "editor.renderWhitespace": "all",
    //"editor.insertSpaces": true,
    //"editor.tabSize": 4,
    //"editor.detectIndentation": true,
    "makefile.extensionOutputFolder": "./.vscode",
    "idf.adapterTargetName": "esp32",
    /* Files that are not shown in vscode workspace */
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.obj": true
    },
    /* Files that will not be parsed by C/CPP extension */
    "C_Cpp.files.exclude": {
        "**/.vscode": true,
        "**/_build": true
    },
    "idf.portWin": "COM16",
    "idf.flashType": "UART",
    "idf.monitorBaudRate": "115200",
    "files.associations": {
    },
    "cmake.configureOnOpen": false
}